{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@config/*": ["src/config/*"],
            "@shared/*": ["src/shared/*"],
            "@api/*": ["src/api/*"],
            "@domains/*": ["src/api/domains/*"]
        }
    }
}
